{
  "name": "fuin",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:vault": "turbo run dev --filter=vault",
    "dev:guardian": "turbo run dev --filter=guardian",
    "build:program": "cd programs/fuin && anchor build",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "@types/bn.js": "^5.2.0",
    "prettier": "^3.7.4",
    "turbo": "^2.8.8",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@coral-xyz/anchor": "^0.32.1",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "bn.js": "^5.2.2",
    "decimal.js": "^10.6.0"
  }
}
